generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String
  login         String         @unique
  password      String?
  refreshTokens RefreshToken[]
}

model RefreshToken {
  hashedToken String @unique
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}
